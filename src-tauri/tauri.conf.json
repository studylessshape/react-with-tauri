{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "react-with-tauri",
  "version": "0.1.0",
  "identifier": "com.react-with-tauri.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "react-with-tauri",
        "width": 800,
        "height": 600,
        "minHeight": 300,
        "minWidth": 400,
        "theme": "Dark"
      }
    ],
    "security": {
      "assetProtocol": { "enable": true },
      "csp": "default-src 'self' ipc: http://ipc.localhost asset: http://asset.localhost"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
